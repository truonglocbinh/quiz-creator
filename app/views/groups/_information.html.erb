<div class="row">
  <div class="box box-widget widget-user-2" style="border: 1px solid #EEEEEE;">
    <div class="widget-user-header bg-yellow">
      <div class="widget-user-image">
        <% if current_user.avatar_file_name.nil? %>
          <%= image_tag("noavatar", class: "img-responsive") %>
        <% else %>
          <%= image_tag current_user.avatar.url, class: "img-responsive" %>
        <% end %>
      </div>
      <h6 class="widget-user-username"><%= group.owner.name %></h6>
      <h5 class="widget-user-desc"><span class="label label-danger">Owner</span></h5>
    </div>
    <div class="box-footer no-padding">
      <ul class="nav nav-stacked">
        <li>
          <%= link_to group_user_groups_path(@group) do %>
            <%= t("button.student") %>
            <span class="pull-right badge bg-aqua"><%= group.users.size %></span>
          <% end %>
        </li>
        <li>
          <%= link_to group_exam_groups_path(@group) do %>
            Exams
            <span class="pull-right badge bg-green"><%= group.exams.size %></span>
          <% end %>
        </li>
        <li>
          <%= link_to show_assign_path(group_id: @group.id) do %>
            Assign
            <span class="pull-right badge bg-red"><%= group.exam_users.size %></span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
