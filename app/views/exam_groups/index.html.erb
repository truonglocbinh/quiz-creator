<% provide :title, t("title.all_exam_group") %>
<div class="row">
  <div class="col-md-10 panel panel-default">
    <h2><%= @group.name %></h2>
    <p><%= @group.description %></p>
  </div>
  <div class="col-md-2" style="padding-left: 7.7%; margin-top: 2%;">
    <%= link_to add_exam_path(group_id: @group.id), class: "btn btn-primary" do %>
      <i class="fa fa-plus"></i>
      <%= t("button.add_exam") %>
    <% end %>
  </div>
</div>
<div class="row">
  <table class="table table-striped">
    <tr>
      <td>#</td>
      <td><%= t "model.exam.title" %></td>
      <td></td>
    </tr>
    <% @exams.each_with_index do |exam, index| %>
      <tr>
        <td><%= index +1 %></td>
        <td><%= link_to exam.title, exam_path(exam) %></td>
        <td></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="row">
  <%= link_to t("button.back"), :back, class: "btn btn-primary" %>
</div>
