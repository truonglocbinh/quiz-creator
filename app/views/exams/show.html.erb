<div class="row">
  <div class="col-md-10" style="padding-left: 0;">
    <h3><%= @exam.title %></h3>
  </div>
  <div class="col-md-2">
    <div class="btn-group">
        <button type="button" class="btn btn-success">Config</button>
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <% unless ExamGroup.all.pluck(:exam_id).include? @exam.id %> 
            <li>
               <%= link_to edit_exam_path @exam do %>
                <i class="fa fa-pencil fa-fw"></i>
                <%= t("button.edit") %>
              <% end %>
            </li>
            <li class="divider"></li>
          <% end %>
          <li>
             <%= link_to exam_path(@exam, format: "pdf") do %>
              <i class="fa fa-file-pdf-o fa-fw"></i>
              <%= t("button.pdf") %>
            <% end %>
          </li>
          <li>
            <%= link_to new_exam_question_path(@exam) do %>
              <i class="fa fa-plus"></i>
              <%= t("button.new_question") %>
            <% end %>
          </li>
          <li>
              <%= link_to exam_setting_path(@exam) do %>
                <i class="fa fa-cog"></i>
                <%= t "exams.show.setting" %>
              <% end %>
          </li>
        </ul>
    </div>
  </div>
</div>
<hr>

<div class="row exam-description">
  <% unless @exam.description.nil? %>
    <%= @exam.description %>
  <% else %>
    <span class="label label-danger"><%= t "exams.show.no_description" %></span>
  <% end %>
</div>

<div class="row questions">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">All Questions</h3>
    </div>
      <!-- /.box-header -->
    <div class="box-body">
      <table id="example2" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Stt</th>
            <th><%= t ".title" %></th>
            <th><%= t "exams.show.score" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
         <% @questions.each_with_index do |question, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <%= sanitize question.title.html_safe.truncate(100) %>
              </td>
              <td><%= question.score %></td>
              <td>
                <%= link_to edit_exam_question_path(@exam, question),
                    class: "btn btn-primary" do %>
                    <i class="fa fa-pencil fa-fw"></i>
                    <%= t("button.edit") %>
                  <% end %>
                <% unless ExamGroup.all.pluck(:exam_id).include? @exam.id %>
                  <%= link_to exam_question_path(@exam, question), 
                    method: :delete,
                    data: {confirm: "Are you sure ?"}, 
                    class: "btn btn-danger" do %>
                    <i class="fa fa-trash-o fa-fw"></i>
                    <%= t("button.delete") %>
                  <% end %>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
