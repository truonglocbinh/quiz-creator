<%= form_for @subject, html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <fieldset>
    <legend>Basic Subject Information</legend>
    <div class="form-group">
      <div class="col-md-2 control-label"><%= f.label :title %></div>
      <div class="col-md-4">
        <%= f.text_field :title, placeholder: "Title (required)",
          class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2 control-label"><%= f.label :description %></div>
      <div class="col-md-10">
        <%= f.text_area :description,
          placeholder: "Description", cols: 10, rows: 10, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-4 col-md-offset-2">
        <%= f.submit t("button.create"), class: "btn btn-primary button" %>
      </div>
    </div>
  </fieldset>
<% end %>
